[
  {
    "context": "Workspace",
    "bindings": {
      // navigation
      ", f": "file_finder::Toggle",

      ", g": "git_panel::ToggleFocus",
      ", G": "workspace::ToggleLeftDock",

      ", l": "agent::ToggleFocus",
      ", L": "workspace::ToggleRightDock",

      ", o": "project_panel::ToggleFocus",
      ", O": "workspace::ToggleLeftDock",

      ", P": "projects::OpenRecent",
      ", p": "file_finder::Toggle",

      "alt-l": "editor::AcceptEditPrediction",

      // close search
      ", /": "buffer_search::Dismiss",

      // window splits
      ", \\": "pane::SplitRight",
      ", -": "pane::SplitDown",

      // zoom
      ", z": "workspace::ToggleZoom",

      // git
      ", g R": "git::Restore",

      // terminals
      ", t": "workspace::NewCenterTerminal",

      ", r": "editor::Rename",

      // cmake
      ", t b": ["task::Spawn", { "task_name": "Build" }],
      ", t r": ["task::Spawn", { "task_name": "Run" }],
      ", t t": ["task::Spawn", { "task_name": "Test" }],
      ", t d": ["task::Spawn", { "task_name": "Debug" }]
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      // use toggle key to close dock
      ", o": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "AssistantPanel",
    "bindings": {
      // use toggle key to close dock
      ", l": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      ", P": "git::Push",
      ", f": "git::Fetch",

      // use toggle key to close dock
      ", g": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // no lower case bindings in terminal because they conflict with terminal bindings

      "ctrl-H": "workspace::ActivatePaneLeft",
      "ctrl-alt-h": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],

      "ctrl-L": "workspace::ActivatePaneRight",
      "ctrl-alt-l": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],

      "ctrl-K": "workspace::ActivatePaneUp",
      "ctrl-alt-k": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ],

      "ctrl-J": "workspace::ActivatePaneDown",
      "ctrl-alt-j": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ]
    }
  },
  {
    "context": "Editor || ProjectPanel || GitPanel || AssistantPanel",
    "bindings": {
      "ctrl-H": "workspace::ActivatePaneLeft",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-alt-h": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],

      "ctrl-L": "workspace::ActivatePaneRight",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-alt-l": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],

      "ctrl-K": "workspace::ActivatePaneUp",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-alt-k": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ],

      "ctrl-J": "workspace::ActivatePaneDown",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-alt-j": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ]
    }
  }
]
