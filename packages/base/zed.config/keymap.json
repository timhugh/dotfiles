[
	{
		"context": "Workspace && !Terminal && !CommandPalette && !(vim_mode == insert)",
		"bindings": {
			"g F": "file_finder::Toggle",
			"g P": "projects::OpenRecent",
			", E": "project_panel::ToggleFocus",
			", A": "agent::ToggleFocus",
			", G": "git_panel::ToggleFocus",
			", space": "workspace::ToggleAllDocks",

			", g b": "git::Blame",
			", g d": "git::Diff",
			", g P": "git::Push",
			", g f": "git::Fetch",

			", /": "buffer_search::Dismiss",

			", \\": "pane::SplitRight",
			", -": "pane::SplitDown",
			"alt-h": "workspace::ActivatePaneLeft",
			"alt-l": "workspace::ActivatePaneRight",
			"alt-k": "workspace::ActivatePaneUp",
			"alt-j": "workspace::ActivatePaneDown",

			", z": "workspace::ToggleZoom",

			", t": "workspace::NewCenterTerminal",

			", r": "editor::Rename",

			// bujo tasks
			", n n": ["task::Spawn", { "task_name": "Bujo current" }],
			", n s": ["task::Spawn", { "task_name": "Bujo search" }],
			", n f": ["task::Spawn", { "task_name": "Bujo next" }],
			", n F": ["task::Spawn", { "task_name": "Bujo forward" }],
			", n b": ["task::Spawn", { "task_name": "Bujo previous" }],
			", n B": ["task::Spawn", { "task_name": "Bujo backward" }],
			", n C": ["task::Spawn", { "task_name": "Bujo commit" }],
			", n P": ["task::Spawn", { "task_name": "Bujo push" }],
		},
	},
	{
		"context": "ProjectPanel && not_editing",
		"bindings": {
			"g .": "project_panel::ToggleHideGitIgnore",
		},
	},
	{
		"context": "Editor && !(vim_mode == insert)",
		"bindings": {
			", g R": "git::Restore",
		},
	},
	// everything below here is disabling a default keybind that interferes
	// with something above
	{
		"context": "Editor && edit_prediction",
		"bindings": {
			"tab": null,
		},
	},
]
