[
	{
		"context": "Workspace",
		"bindings": {
			"g F": "file_finder::Toggle",
			"g P": "projects::OpenRecent",
			", space": "workspace::CloseAllDocks",

			", g d": "git::Diff",
			", g P": "git::Push",
			", g f": "git::Fetch",

			", /": "buffer_search::Dismiss",

			", \\": "pane::SplitRight",
			", -": "pane::SplitDown",

			"alt-h": "workspace::ActivatePaneLeft",
			"ctrl-alt-h": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "left" },
			],

			"alt-l": "workspace::ActivatePaneRight",
			"ctrl-alt-l": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "right" },
			],

			"alt-k": "workspace::ActivatePaneUp",
			"ctrl-alt-k": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "up" },
			],

			"alt-j": "workspace::ActivatePaneDown",
			"ctrl-alt-j": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "down" },
			],

			", z": "workspace::ToggleZoom",

			", t": "workspace::NewCenterTerminal",

			", r": "editor::Rename",
		},
	},
	{
		"context": "Editor",
		"bindings": {
			", g R": "git::Restore",
		},
	},
	{
		"context": "Terminal",
		"bindings": {
			"g t": "vim::GoToTab",
		},
	},
	// everything below here is disabling a default keybind that interferes
	// with something above
	{
		"context": "(Editor && edit_prediction)",
		"bindings": {
			"tab": null,
		},
	},
	{
		"context": "Editor",
		"bindings": {
			"ctrl-alt-h": null,
		},
	},
]
