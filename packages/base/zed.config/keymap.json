[
	{
		"context": "Workspace",
		"bindings": {
			// navigation
			", f f": "file_finder::Toggle",

			", g": "git_panel::ToggleFocus",
			", G": "workspace::ToggleLeftDock",

			", l": "agent::ToggleFocus",
			", L": "workspace::ToggleRightDock",

			", o": "project_panel::ToggleFocus",
			", O": "workspace::ToggleLeftDock",

			", P": "projects::OpenRecent",
			", p": "file_finder::Toggle",

			"alt-l": "editor::AcceptEditPrediction",

			// close search
			", /": "buffer_search::Dismiss",

			// window splits
			", \\": "pane::SplitRight",
			", -": "pane::SplitDown",

			// zoom
			", z": "workspace::ToggleZoom",

			// git
			", g R": "git::Restore",

			// terminals
			", t": "workspace::NewCenterTerminal",

			", r": "editor::Rename",
		},
	},
	{
		"context": "ProjectPanel",
		"bindings": {
			// use toggle key to close dock
			", o": "workspace::ToggleLeftDock",
		},
	},
	{
		"context": "AssistantPanel",
		"bindings": {
			// use toggle key to close dock
			", l": "workspace::ToggleRightDock",
		},
	},
	{
		"context": "GitPanel",
		"bindings": {
			", P": "git::Push",
			", f": "git::Fetch",

			// use toggle key to close dock
			", g": "workspace::ToggleLeftDock",
		},
	},
	{
		"context": "Editor || ProjectPanel || GitPanel || AssistantPanel || Terminal",
		"bindings": {
			"alt-h": "workspace::ActivatePaneLeft",
			"ctrl-alt-h": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "left" },
			],

			"alt-l": "workspace::ActivatePaneRight",
			"ctrl-alt-l": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "right" },
			],

			"alt-k": "workspace::ActivatePaneUp",
			"ctrl-alt-k": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "up" },
			],

			"alt-j": "workspace::ActivatePaneDown",
			"ctrl-alt-j": [
				"workspace::MoveItemToPaneInDirection",
				{ "direction": "down" },
			],
		},
	},
	{
		"context": "(Editor && edit_prediction)",
		"bindings": {
			"tab": null,
		},
	},
]
