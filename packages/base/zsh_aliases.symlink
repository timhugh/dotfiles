# handy LS aliases (and color!)
alias ls='ls -GF'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -la'

# human readable file sizes
alias df='df -h'
alias du='du -h'

# cd shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'

export EDITOR='zed'
alias e='$EDITOR'

alias watch='watchexec --clear clear --restart --debounce 1s'

alias unquarantine='xattr -dr com.apple.quarantine'
