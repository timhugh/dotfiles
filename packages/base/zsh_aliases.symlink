# handy LS aliases (and color!)
alias ls='ls -GF'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -la'

# human readable file sizes
alias df='df -h'
alias du='du -h'

# cd shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'

# quickly access dotfiles
alias dotfiles='cd ${HOME}/share/dotfiles'
alias dotfiles-edit='zsh -c "cd ${HOME}/share/dotfiles && nvim && exit"'

alias watch='watchexec --clear clear --restart'
