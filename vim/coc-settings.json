{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "h",
        "hpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "solargraph.useBundler": true,
  "solargraph.completion": true,
  "solargraph.autoformat": true
}
