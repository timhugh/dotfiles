[user]
  name = Tim Heuett
  email = tim.heuett@gmail.com
[core]
  editor = nvim
  excludesfile = ~/.gitignore
[push]
  default = simple
[credential]
  helper = osxkeychain
[alias]
  br = branch
  c = commit -m
  ca = commit --amend --reuse-message=HEAD
  cam = commit --amend -m
  co = checkout
  df = diff
  dfs = diff --staged
  dt = diff-tree --name-status -r
  la = log --patch --stat --pretty=format:\"%C(bold red)%h %Cgreen%cr %Cblue%cn%C(yellow)%d %Creset%s\"
  ll = log --pretty=format:\"%Cred%h %>(11,trunc)%Cgreen%cr %<(10,trunc)%Cblue%cn%C(yellow)%d %Creset%s\"
  m = merge
  ma = merge --abort
  mc = merge --continue
  mm = merge -m
  p = pull
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  repush = !git pull --rebase && git push
  s = log -S
  st = status --short --branch
  u = merge --no-commit --ff-only
[pull]
	ff = only
